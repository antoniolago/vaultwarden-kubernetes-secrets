# Vaultwarden Configuration
VAULTWARDEN__SERVERURL=https://your-vaultwarden-instance.com
VAULTWARDEN__MASTERPASSWORD=your-master-password
BW_CLIENTID=your-client-id
BW_CLIENTSECRET=your-client-secret

# Optional organization scoping
# VAULTWARDEN__ORGANIZATIONID=your-org-id
# VAULTWARDEN__ORGANIZATIONNAME=org-name

# Optional folder/collection filters
# VAULTWARDEN__FOLDERID=folder-id
# VAULTWARDEN__FOLDERNAME=folder-name
# VAULTWARDEN__COLLECTIONID=collection-id
# VAULTWARDEN__COLLECTIONNAME=collection-name

# Kubernetes Configuration
KUBERNETES__KUBECONFIGPATH=
KUBERNETES__CONTEXT=your-k8s-context
KUBERNETES__DEFAULTNAMESPACE=default
KUBERNETES__INCLUSTER=false

# Application Namespace (where the app and auth token secret are deployed)
APP_NAMESPACE=vaultwarden-kubernetes-secretss

# Sync Configuration
SYNC__DRYRUN=false
SYNC__DELETEORPHANS=true
SYNC__SYNCINTERVALSECONDS=30
SYNC__CONTINUOUSSYNC=true
# Valkey (Redis-compatible) connection for real-time sync output (optional)
VALKEY_CONNECTION=localhost:6379
# Optional: custom field name overrides
# SYNC__FIELD__NAMESPACES=namespaces
# SYNC__FIELD__SECRETNAME=secret-name
# SYNC__FIELD__SECRETKEYPASSWORD=secret-key-password
# SYNC__FIELD__SECRETKEYUSERNAME=secret-key-username
# SYNC__FIELD__SECRETKEY=secret-key
# SYNC__FIELD__REPLACEMENT_CHAR=_

# Logging Configuration
LOGGING__LOGLEVEL__DEFAULT=Information
LOGGING__LOGLEVEL__MICROSOFT=Warning
LOGGING__LOGLEVEL__MICROSOFT__HOSTING__LIFETIME=Information

# API/Dashboard Authentication
# Set to true to disable authentication (NOT RECOMMENDED for production)
LOGINLESS_MODE=false
# Optional: Set a custom auth token
# If not set and LOGINLESS_MODE=false, a token will be automatically:
#   1. Read from Kubernetes secret 'vaultwarden-kubernetes-secrets-token' in APP_NAMESPACE (if exists)
#   2. Generated and stored in Kubernetes secret in APP_NAMESPACE (if secret doesn't exist)
# To retrieve the token: kubectl get secret vaultwarden-kubernetes-secrets-token -n <APP_NAMESPACE> -o jsonpath='{.data.token}' | base64 -d
# AUTH_TOKEN=your-secret-token-here
