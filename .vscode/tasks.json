{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Valkey",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/valkey-podman.sh start",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "group": "services"
      }
    },
    {
      "label": "Stop Valkey",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/valkey-podman.sh stop",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Build API",
      "type": "shell",
      "command": "dotnet build ${workspaceFolder}/VaultwardenK8sSync.Api/VaultwardenK8sSync.Api.csproj",
      "group": "build",
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Build Sync",
      "type": "shell",
      "command": "dotnet build ${workspaceFolder}/VaultwardenK8sSync/VaultwardenK8sSync.csproj",
      "group": "build",
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Start All Services",
      "dependsOn": [
        "Start Valkey"
      ],
      "problemMatcher": []
    }
  ]
}
